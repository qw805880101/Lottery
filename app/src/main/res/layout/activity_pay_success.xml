<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/buy_step2_bg">

        <LinearLayout
            android:id="@+id/lin_all_lottery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="330dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出票成功！共 "
                android:textColor="@color/txt_color_333333"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/txt_all_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/txt_color_f0264c"
                android:textSize="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 张"
                android:textColor="@color/txt_color_333333"
                android:textSize="35dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_out_ticket_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="330dp"
            android:text="支付成功！正在出票...（1/1）"
            android:textColor="@color/txt_color_333333"
            android:textSize="35dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="520dp">

            <ImageView
                android:id="@+id/image_ticket"
                android:layout_width="336dp"
                android:layout_height="416dp"
                android:src="@mipmap/buy_step2_ticket" />

        </RelativeLayout>

        <ImageView
            android:layout_width="336dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="520dp"
            android:src="@mipmap/buy_step2_mask" />

        <LinearLayout
            android:id="@+id/lin_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="350dp"
            android:orientation="horizontal"
            android:paddingLeft="117dp"
            android:paddingRight="117dp">

            <Button
                android:id="@+id/bt_how"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:background="@drawable/bt_selector_how"
                android:gravity="center"
                android:text="如何兑奖"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <Button
                android:id="@+id/bt_back"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginLeft="35dp"
                android:layout_weight="1"
                android:background="@drawable/bt_selector_back_2"
                android:gravity="center"
                android:text="返回主界面(90)"
                android:textColor="@color/txt_color_333333"
                android:textSize="30dp" />

        </LinearLayout>

    </RelativeLayout>

    <include
        android:id="@+id/view_bottom"
        layout="@layout/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>