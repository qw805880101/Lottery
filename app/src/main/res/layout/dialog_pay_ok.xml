<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/dialog_up_w"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="40dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/chupiao2_bg" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="78dp">

                    <ImageView
                        android:id="@+id/image_pay_ticket"
                        android:layout_width="70dp"
                        android:layout_height="85dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/chupiao2_piao" />

                    <!--<ImageView-->
                        <!--android:id="@+id/image_pay_success"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_centerInParent="true"-->
                        <!--android:src="@mipmap/chupiao2_gou"-->
                        <!--android:visibility="gone" />-->

                    <com.tc.lottery.view.SuccessView
                        android:id="@+id/success"
                        android:layout_width="40dp"
                        android:visibility="gone"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true" />


                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出票成功！共 "
                    android:textColor="@color/txt_color_333333"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_ticket_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/txt_color_f0264c"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 张"
                    android:textColor="@color/txt_color_333333"
                    android:textSize="17dp" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <Button
                android:id="@+id/bt_how"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bt_selector_how"
                android:gravity="center"
                android:text="如何兑奖"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:id="@+id/bt_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bt_selector_back_2"
                android:gravity="center"
                android:text="返回主界面(90)"
                android:textColor="@color/txt_color_333333"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>